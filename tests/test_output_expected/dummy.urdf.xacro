<robot name="placeholder" xmlns:xacro="https://ros.org/wiki/xacro">
  <xacro:macro name="mk_dummy" params="ns">
    <link name="${ns}/l1" />
    <link name="${ns}/l2" />
    <link name="${ns}/l3" />
    <joint name="${ns}/j12" type="fixed">
      <parent link="${ns}/l1" />
      <origin xyz="0 0 1" rpy="0 1.54 0" />
      <child link="${ns}/l2" />
    </joint>
    <joint name="${ns}/j13" type="continuous">
      <parent link="${ns}/l1" />
      <origin xyz="0 0 2" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <child link="${ns}/l3" />
    </joint>
  </xacro:macro>
</robot>